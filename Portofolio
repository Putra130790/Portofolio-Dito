    <!-- Libraries init -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
      // AOS
      AOS.init({ duration: 800, once: true });

      // Theme toggle
      const themeToggle = document.getElementById("themeToggle");
      const body = document.body;
      const saved = localStorage.getItem("theme");
      if (saved) body.setAttribute("data-theme", saved);
      themeToggle.addEventListener("click", () => {
        const cur = body.getAttribute("data-theme") || "dark";
        const next = cur === "dark" ? "light" : "dark";
        body.setAttribute("data-theme", next);
        localStorage.setItem("theme", next);
      });

      // Year
      document.getElementById("year").textContent = new Date().getFullYear();

      // Simple slider
      const track = document.getElementById("slidesTrack");
      const slides = Array.from(track.children);
      let index = 0;
      const prev = document.getElementById("prev");
      const nextBtn = document.getElementById("next");

      function update() {
        const slideW = slides[0].getBoundingClientRect().width + 12; // gap
        track.style.transform = `translateX(${-index * slideW}px)`;
      }
      prev.addEventListener("click", () => {
        index = Math.max(0, index - 1);
        update();
      });
      nextBtn.addEventListener("click", () => {
        index = Math.min(slides.length - 1, index + 1);
        update();
      });

      // drag / swipe support
      let startX = 0,
        currentX = 0,
        isDown = false;
      track.addEventListener("pointerdown", (e) => {
        isDown = true;
        startX = e.clientX;
        track.style.cursor = "grabbing";
      });
      track.addEventListener("pointermove", (e) => {
        if (!isDown) return;
        currentX = e.clientX;
      });
      track.addEventListener("pointerup", () => {
        if (!isDown) return;
        isDown = false;
        track.style.cursor = "grab";
        const dx = startX - currentX;
        if (Math.abs(dx) > 40) {
          if (dx > 0) index = Math.min(slides.length - 1, index + 1);
          else index = Math.max(0, index - 1);
          update();
        }
      });
      track.addEventListener("pointerleave", () => {
        if (isDown) track.dispatchEvent(new Event("pointerup"));
      });

      // GSAP subtle entrance for project cards
      window.addEventListener("load", () => {
        gsap.from("[data-gsap]", {
          y: 18,
          opacity: 0,
          stagger: 0.12,
          duration: 0.8,
          ease: "power3.out",
        });
      });

      // Contact form -> mailto (simple) and WhatsApp
      const contactForm = document.getElementById("contactForm");
      contactForm.addEventListener("submit", (e) => {
        e.preventDefault();
        const n = document.getElementById("name").value;
        const em = document.getElementById("email").value;
        const msg = document.getElementById("message").value;
        const subject = encodeURIComponent("Inquiry from portfolio - " + n);
        const body = encodeURIComponent(`Name: ${n}\nEmail: ${em}\n\n${msg}`);
        window.location.href = `mailto:hello@contoh.com?subject=${subject}&body=${body}`;
      });

      document.getElementById("sendWhatsapp").addEventListener("click", () => {
        const n = document.getElementById("name").value || "-";
        const msg = document.getElementById("message").value || "-";
        const text = encodeURIComponent(`Halo, saya ${n}. ${msg}`);
        // change number to your WA number in international format without plus
        window.open(`https://wa.me/6285945052199?text=${text}`, "_blank");
      });

      document
        .getElementById("whatsappQuick")
        .addEventListener("click", (e) => {
          e.preventDefault();
          const text = encodeURIComponent(
            "Halo Dito Puta, saya tertarik dengan layanan development Anda."
          );
          window.open(`https://wa.me/6285945052199?text=${text}`, "_blank");
        });

      // Download CV using jsPDF
      const { jsPDF } = window.jspdf;
      function generateCvPdf() {
        const doc = new jsPDF();
        doc.setFontSize(18);
        doc.text("Dito Putra ‚Äî Web Developer", 14, 20);
        doc.setFontSize(12);
        doc.text("Email: hello@contoh.com", 14, 30);
        doc.text("Phone: +62 812-3456-7890", 14, 36);
        doc.text("Location: Jakarta, Indonesia", 14, 42);
        doc.text(
          "\nAbout:\nWeb developer berpengalaman membangun UI responsive dan maintainable code. Spesialis pada HTML, CSS, dan JavaScript.",
          14,
          54
        );
        doc.text(
          "\nSkills:\n- HTML (95%)\n- CSS (92%)\n- JavaScript (88%)\n- Performance & Accessibility (80%)",
          14,
          86
        );
        doc.save("Zaki_CV.pdf");
      }

      document
        .getElementById("downloadCvBtn")
        .addEventListener("click", generateCvPdf);
      document
        .getElementById("downloadCvSmall")
        .addEventListener("click", generateCvPdf);

      // Quick small helper to set initial sizes after fonts load
      window.addEventListener("resize", update);
      setTimeout(update, 300);
    </script>
    <script>
      const bgMusic = document.getElementById("bgMusic");
      const musicToggle = document.getElementById("musicToggle");
      let isPlaying = true;

      musicToggle.addEventListener("click", () => {
        if (isPlaying) {
          bgMusic.pause();
          musicToggle.textContent = "üîá";
        } else {
          bgMusic.play();
          musicToggle.textContent = "üîä";
        }
        isPlaying = !isPlaying;
      });

      // Volume default (lebih nyaman)
      bgMusic.volume = 0.3;
    </script>
  </body>
</html>
